{
  "name": "mnemos",
  "displayName": "Mnemos",
  "description": "A second brain for your code - attach persistent notes to AST nodes",
  "version": "0.1.0",
  "publisher": "mnemos",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:rust",
    "onLanguage:typescript",
    "onLanguage:javascript",
    "onLanguage:python",
    "onLanguage:go",
    "onLanguage:java",
    "onCommand:mnemos.addNote"
  ],
  "main": "./out/src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mnemos.addNote",
        "title": "Mnemos: Add Note"
      },
      {
        "command": "mnemos.deleteNote",
        "title": "Mnemos: Delete Note"
      },
      {
        "command": "mnemos.reattachNote",
        "title": "Mnemos: Reattach Stale Note"
      },
      {
        "command": "mnemos.editNote",
        "title": "Mnemos: Edit Note"
      },
      {
        "command": "mnemos.refreshNotes",
        "title": "Mnemos: Refresh Notes"
      },
      {
        "command": "mnemos.listNotes",
        "title": "Mnemos: List Notes"
      },
      {
        "command": "mnemos.indexProject",
        "title": "Mnemos: Index Project"
      },
      {
        "command": "mnemos.search",
        "title": "Mnemos: Search"
      },
      {
        "command": "mnemos.insertLink",
        "title": "Mnemos: Insert Note Link"
      },
      {
        "command": "mnemos.followLink",
        "title": "Mnemos: Follow Link"
      },
      {
        "command": "mnemos.navigateBack",
        "title": "Mnemos: Navigate Back"
      },
      {
        "command": "mnemos.status",
        "title": "Mnemos: Show Status"
      },
      {
        "command": "mnemos.backlinks",
        "title": "Mnemos: Show Backlinks"
      },
      {
        "command": "mnemos.viewNote",
        "title": "Mnemos: View Note"
      },
      {
        "command": "mnemos.editNoteBuffer",
        "title": "Mnemos: Edit Note (Buffer)"
      },
      {
        "command": "mnemos.help",
        "title": "Mnemos: Help"
      },
      {
        "command": "mnemos.shutdown",
        "title": "Mnemos: Shutdown Backend"
      },
      {
        "command": "mnemos.explainRegion",
        "title": "Mnemos: Explain Region (Copy for LLM)"
      },
      {
        "command": "mnemos.explainRegionAI",
        "title": "Mnemos: Explain Region (AI)"
      },
      {
        "command": "mnemos.indexProjectAI",
        "title": "Mnemos: Index Project with AI"
      },
      {
        "command": "mnemos.projectMeta",
        "title": "Mnemos: Project Info"
      },
      {
        "command": "mnemos.selectNote",
        "title": "Mnemos: Select Note"
      },
      {
        "command": "mnemos.clearSelection",
        "title": "Mnemos: Clear Note Selection"
      }
    ],
    "configuration": {
      "title": "Mnemos",
      "properties": {
        "mnemos.backend": {
          "type": "string",
          "default": "",
          "description": "Path to mnemos backend binary. If empty, searches PATH."
        },
        "mnemos.mnemosDir": {
          "type": "string",
          "default": "",
          "description": "Directory for Mnemos socket, lock, and log files. Defaults to ~/.mnemos"
        },
        "mnemos.notesPath": {
          "type": "string",
          "default": "",
          "description": "Path to notes directory. Defaults to <project>/.mnemos/notes"
        },
        "mnemos.autoRefresh": {
          "type": "boolean",
          "default": true,
          "description": "Automatically refresh notes when opening files"
        },
        "mnemos.displayStyle": {
          "type": "string",
          "enum": [
            "full",
            "minimal"
          ],
          "default": "full",
          "description": "Note display style: full (comment block) or minimal (inline marker)"
        },
        "mnemos.debug": {
          "type": "string",
          "enum": [
            "off",
            "basic",
            "verbose"
          ],
          "default": "basic",
          "description": "Debug logging level: off, basic (RPC calls), or verbose (with payloads)"
        }
      }
    },
    "views": {
      "explorer": [
        {
          "id": "mnemosNotes",
          "name": "Mnemos Notes"
        }
      ]
    },
    "keybindings": [
      {
        "command": "mnemos.addNote",
        "key": "ctrl+shift+h a",
        "mac": "cmd+shift+h a",
        "when": "editorTextFocus"
      },
      {
        "command": "mnemos.listNotes",
        "key": "ctrl+shift+h l",
        "mac": "cmd+shift+h l"
      },
      {
        "command": "mnemos.refreshNotes",
        "key": "ctrl+shift+h r",
        "mac": "cmd+shift+h r",
        "when": "editorTextFocus"
      },
      {
        "command": "mnemos.deleteNote",
        "key": "ctrl+shift+h d",
        "mac": "cmd+shift+h d",
        "when": "editorTextFocus"
      },
      {
        "command": "mnemos.reattachNote",
        "key": "ctrl+shift+h shift+r",
        "mac": "cmd+shift+h shift+r",
        "when": "editorTextFocus"
      },
      {
        "command": "mnemos.editNote",
        "key": "ctrl+shift+h e",
        "mac": "cmd+shift+h e",
        "when": "editorTextFocus"
      },
      {
        "command": "mnemos.search",
        "key": "ctrl+shift+h f",
        "mac": "cmd+shift+h f"
      },
      {
        "command": "mnemos.indexProject",
        "key": "ctrl+shift+h p",
        "mac": "cmd+shift+h p"
      },
      {
        "command": "mnemos.insertLink",
        "key": "ctrl+shift+h k",
        "mac": "cmd+shift+h k",
        "when": "editorTextFocus"
      },
      {
        "command": "mnemos.followLink",
        "key": "ctrl+shift+h ]",
        "mac": "cmd+shift+h ]",
        "when": "editorTextFocus"
      },
      {
        "command": "mnemos.navigateBack",
        "key": "ctrl+shift+h [",
        "mac": "cmd+shift+h [",
        "when": "editorTextFocus"
      },
      {
        "command": "mnemos.backlinks",
        "key": "ctrl+shift+h b",
        "mac": "cmd+shift+h b",
        "when": "editorTextFocus"
      },
      {
        "command": "mnemos.viewNote",
        "key": "ctrl+shift+h v",
        "mac": "cmd+shift+h v",
        "when": "editorTextFocus"
      },
      {
        "command": "mnemos.editNoteBuffer",
        "key": "ctrl+shift+h shift+e",
        "mac": "cmd+shift+h shift+e",
        "when": "editorTextFocus"
      },
      {
        "command": "mnemos.explainRegion",
        "key": "ctrl+shift+h x",
        "mac": "cmd+shift+h x",
        "when": "editorTextFocus && editorHasSelection"
      },
      {
        "command": "mnemos.selectNote",
        "key": "ctrl+shift+h s",
        "mac": "cmd+shift+h s",
        "when": "editorTextFocus"
      },
      {
        "command": "mnemos.clearSelection",
        "key": "ctrl+shift+h escape",
        "mac": "cmd+shift+h escape"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "test:e2e": "npm run compile && npx playwright test --config=test/e2e/playwright.config.ts"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.54.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "playwright": "^1.57.0",
    "typescript": "^5.3.3"
  }
}
