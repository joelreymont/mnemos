{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Display configuration for Mnemos note rendering across editors",

  "note_format": {
    "wrap_width": 70,
    "show_id": true,
    "id_format": "[{id:0:8}]",
    "line_prefix": "comment",
    "stale_prefix": "[STALE] ",
    "multiline_separator": "---"
  },

  "colors": {
    "note_text": {
      "description": "Normal note text color",
      "hex": "#87ceeb",
      "name": "SteelBlue"
    },
    "note_id": {
      "description": "Note ID color (dimmed)",
      "hex": "#6c757d",
      "name": "Gray"
    },
    "stale_note": {
      "description": "Stale note indicator",
      "hex": "#cc6666",
      "name": "IndianRed"
    },
    "link": {
      "description": "Internal link color",
      "hex": "#98c379",
      "name": "LightGreen"
    }
  },

  "highlight_groups": {
    "neovim": {
      "MnemosNote": { "fg": "#87ceeb", "italic": true },
      "MnemosNoteId": { "fg": "#6c757d" },
      "MnemosNoteStale": { "fg": "#cc6666", "italic": true },
      "MnemosNoteLink": { "fg": "#98c379", "underline": true }
    },
    "emacs": {
      "mnemos-note-face": { "foreground": "#87ceeb", "slant": "italic" },
      "mnemos-note-id-face": { "foreground": "#6c757d" },
      "mnemos-note-stale-face": { "foreground": "#cc6666", "slant": "italic" },
      "mnemos-note-link-face": { "foreground": "#98c379", "underline": true }
    },
    "vscode": {
      "mnemos.note": { "color": "#87ceeb", "fontStyle": "italic" },
      "mnemos.noteId": { "color": "#6c757d" },
      "mnemos.noteStale": { "color": "#cc6666", "fontStyle": "italic" },
      "mnemos.noteLink": { "color": "#98c379", "textDecoration": "underline" }
    }
  },

  "icons": {
    "note": "",
    "stale": "",
    "link": "",
    "ai": ""
  },

  "list_view": {
    "columns": ["line", "summary", "stale"],
    "line_format": "{line:4d}",
    "summary_max_length": 60,
    "stale_indicator": "[S]",
    "sort_by": "line",
    "sort_order": "asc"
  }
}
